{
  "$schema": "https://json.schemastore.org/swcrc",
  "exclude": [".*/specs/.*", ".*\\.spec\\.ts$"],
  "jsc": {
    "target": "es2022",
    "parser": {
      "syntax": "typescript",
      "tsx": false,
      "decorators": true,
      "dynamicImport": true,
      "importAssertions": true
    },
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "module": {
    "type": "commonjs"
  }
}
